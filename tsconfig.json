{
  "compilerOptions": {
    "target": "esnext",                                 
    "lib": ["dom", "esnext"],                          
    "jsx": "react",                             
    "module": "esnext", 
    "moduleResolution": "node",
    "esModuleInterop": true,  
    "forceConsistentCasingInFileNames": true,

    "strict": true,                         
    "noImplicitAny": true,
     "strictNullChecks": true,
     "strictFunctionTypes": true,
     "noUnusedLocals": true,                           
     "noUnusedParameters": true,
    "skipLibCheck": true                                 
  },
  "include": ["./src/**/*", "./gatsby-node.ts", "./gatsby-config.ts", "./plugins/**/*"]
}
